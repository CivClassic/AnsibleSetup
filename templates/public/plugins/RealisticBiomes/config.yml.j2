   biomes:
    temperate: 1.0
    foresty: 0.75 
    other: 0.5
    cold: 0.25
    hot_dry: 0.25
    mountain: 0.25
    mesa: 0.25
    mushroom: 0.25
    water: 0.1
    cold_water: 0.1
